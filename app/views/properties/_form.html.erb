  <%= form_for(@property) do |f| %>
  
    <div class="field">
      <%= f.label :name ,"物件名"%><br>
      <%= f.text_field :name%>
    </div>
    <div class="field">
      <%= f.label :rent,"賃料"%><br>
      <%= f.text_field :rent%>円
    </div>
    <div class="field">
      <%= f.label :address,"住所"%><br>
      <%= f.text_field :address%>
    </div>
    <div class="field">
      <%= f.label :age,"築年数"%><br>
      <%= f.text_field :age%>年
    </div>
    <div class="field">
      <%= f.label :remark,"備考"%><br>
      <%= f.text_area :remark%>
    </div>

    <div class="field form-border-top">

      <% @property.closet_stations.each_with_index do | station, index | %>

        <%= f.fields_for :closet_stations, station do |b| %>
        
          <h2>最寄り駅<%= index + 1 %></h2>
          <%= b.hidden_field :close_number , value: index + 1%>

          <div class="field">
            <%= b.label :route_name ,"路線名"%><br>
            <%= b.text_field :route_name %>
          </div>
          <div class="field">
            <%= b.label :station_name ,"駅名"%><br>
            <%= b.text_field :station_name %>
          </div>
          <div class="field">
            <%= b.label :walikng_to_closest_station_minutes ,"徒歩分数"%><br>
            <%= b.text_field :walikng_to_closest_station_minutes %>分
          </div>

          <% end %>
        <% end %>
    </div>
    
      <% btn_value = "登録する"%>
      <% btn_value = "更新する" if action_name=="edit" %>

      <%= f.submit btn_value%><br>
      <% if action_name=="edit" %>
        <%= link_to '詳細', property_path(@property.id)%> | 
      <% end %>
      <%= link_to '戻る', properties_path %>
  <% end %>