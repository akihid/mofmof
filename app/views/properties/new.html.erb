<h1>登録</h1>

<p>物件登録</p>

<%= form_for(@property) do |f| %>
<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name%>
</div>
<div class="field">
  <%= f.label :rent%>
  <%= f.text_field :rent%>
</div>
<div class="field">
  <%= f.label :address%>
  <%= f.text_field :address%>
</div>
<div class="field">
  <%= f.label :age%>
  <%= f.text_field :age%>
</div>
<div class="field">
  <%= f.label :remark%>
  <%= f.text_area :remark%>
</div>

<div class="field">
  <% close_number = 1%>
  
  <%= f.fields_for :closet_stations do |b| %>
  <h2>最寄り駅<%= close_number %></h2>
    <%= b.hidden_field :close_number , value:close_number%>

    <div class="field">
      <%= b.label :route_name %>
      <%= b.text_field :route_name %>
    </div>
    <div class="field">
      <%= b.label :station_name %>
      <%= b.text_field :station_name %>
    </div>
    <div class="field">
      <%= b.label :walikng_to_closest_station_minutes %>
      <%= b.text_field :walikng_to_closest_station_minutes %>
    </div>

     <% close_number += 1%>
  <% end %>
</div>
  <%= f.submit %>
<% end %>